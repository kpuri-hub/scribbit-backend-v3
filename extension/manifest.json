{
  "manifest_version": 3,
  "name": "Scribbit Fairness Scanner",
  "version": "0.1.0",
  "description": "Real-time scanning for refund traps, hidden fees, DCC/FX markups, and unfair terms.",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_title": "Scribbit Scan",
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/messaging.js",
        "content/riskModel.js",
        "content/rules.js",
        "content/riskEngine.js",
        "content/currencyDetector.js",
        "content/scanner.js",
        "ui/panel.js"
      ],
      "css": [
        "ui/panel.css"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ui/panel.css",
        "assets/icons/icon16.png",
        "assets/icons/icon32.png",
        "assets/icons/icon48.png",
        "assets/icons/icon128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
