{
  "manifest_version": 3,
  "name": "Scribbit Fairness Scanner",
  "description": "Real-time scanning for refund traps, hidden fees, DCC/FX markups, and unfair terms.",
  "version": "0.1.0",

  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png"
    }
  },

  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/scanner.js",
        "content/currencyDetector.js",
        "content/feeParser.js",
        "content/selectors.js",
        "content/rules.js",
        "content/riskEngine.js",
        "content/messaging.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ui/panel.css",
        "ui/panel.js",
        "assets/icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
