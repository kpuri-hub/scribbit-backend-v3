{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Scribbit Backend (FastAPI)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "postDebugTask": "kill-uvicorn"
    }
  ]
}
