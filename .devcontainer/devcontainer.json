
{
  "name": "scribbit-backend",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": { "label": "Scribbit API", "onAutoForward": "openBrowser" }
  },
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && python -m pip install --upgrade pip && pip install -r requirements.txt",
  "postAttachCommand": "bash -lc 'source .venv/bin/activate && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload'",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}
